<%= tag.div class: 'px-4 py-8 text-center w-[80px] h-full flex flex-col' do %>
    <%= logo %>
    <%= tag.div class: 'grow flex flex-col justify-between' do %>
        <%= tag.div class: 'grow pt-8' do %>
            <%= tag.div class: 'flex flex-col gap-4 items-center' do %>
                <% items.each do |item| %>
                    <%= sidebar_item **item %>
                <% end %>
            <% end %>
        <% end %>

        <%= tag.div class: 'flex flex-col gap-4 items-center' do %>
            <% bottom_items.each do |item| %>
                <%= sidebar_item **item %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
