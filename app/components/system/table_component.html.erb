<%= tag.div class: container_classes do %>
  <%= tag.table class: table_classes, style: table_styles do %>
    <%= tag.thead do %>
      <%= tag.tr do %>
        <% visible_columns.each_with_index do |item, index| %>
          <%= tag.th item[:label], class: th_classes, style: "font-weight: 400; #{th_styles}" %>
        <% end %>
        <%= tag.th class: th_classes if to.present? %>
      <% end %>
    <% end %>
    <%= tag.tbody do %>
      <% items.each do |item| %>
        <%= row_for(row, columns, item) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>